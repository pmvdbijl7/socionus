<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../../partials/_head'); %>
	</head>

	<body>
		<%- include('../../partials/_header-sub-alt'); %>

		<main>
			<section class="banner" <% if (user.banner_image) { %>
				style="background-image: url('/uploads/<%= user.banner_image
				%>')" <% } %>>
			</section>

			<section class="user-info">
				<% if (user.profile_image) { %>
				<img
					src="/uploads/<%= user.profile_image %>"
					alt="Profile image"
				/>
				<% } else { %>
				<img
					src="/media/images/default_profile_image.jpg"
					alt="Profile image"
				/>
				<% } %> <% if (user.name) { %>
				<h1><%= user.name %></h1>
				<% } %>

				<h2>@<%= user.username %></h2>

				<% if (user.description) { %>
				<p class="description"><%= user.description %></p>
				<% } %> <% if (user.location) { %>
				<p><%= user.location %></p>
				<% } %> <% if (user.birthdate) { %>
				<p>
					Born <%= user.birthdate.toLocaleDateString('en-US', { month:
					'long', day: 'numeric', year: 'numeric' }) %>
				</p>
				<% } %>

				<p>
					Joined <%= user.createdAt.toLocaleDateString('en-US', {
					month: 'long', year: 'numeric' }) %>
				</p>
			</section>
		</main>
	</body>
</html>
